<div class="author">
  {% if metadata.author.image %}
    <img
      alt="Author img"
      class="author__image"
      src="/assets/images/author.jpg"
      alt="Author image"
    />
  {% endif %}

  <h1 class="author__site-title">{{ metadata.author.nickname }}</h1>

  <div class="author__intro">
    {{ metadata.author.bio }}
  </div>

  {% if metadata.author.menu | length %}
    <div class="author__menu">
      {% for key,val in metadata.author.menu %}
        <a class="author__link" href="{{ val }}">{{ key | title }}</a>
      {% endfor %}
    </div>
  {% endif %}
  <span></span>
  <hr class="custom-hr" />
  {% if metadata.author.social | length %}
    <div class="author__menu">
      {% for key,val in metadata.author.social %}
        <a class="author__link" href="{{ val }}" target="blank">{{ key | title }}</a>
      {% endfor %}
    </div>
  {% endif %}
</div>
