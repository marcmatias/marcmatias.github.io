---
permalink: /
layout: layouts/home.njk
templateClass: tmpl-index
type: website
---

{% include "author.njk" %}

{% set maxPosts = collections.posts.length | min(3) %}

{% set postslist = collections.posts | head(-3) %}
{% set postslistCounter = collections.posts | length %}
{% include "postslist.njk" %}

{% if collections.posts.length > maxPosts %}
  <div class="content-buttons content--multiple">
    <button
      class="btn btn--post-links btn--post-links-right"
      onclick="location.href = '{{ '/posts/' | url }}'"
      title="Clique para ver postagem seguinte"
    >
    Ver todas as postagens
    </button>
  </div>
{% endif %}
